{
    "manifest_version": 3,
    "name": "Misinfo Detector",
    "version": "1.0",
    "description": "Basic setup for Chrome Extension using TypeScript.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "background": {
        "service_worker": "dist/background.js"
    },
    "action": {
        "default_popup": "popup/build/index.html",
        "default_icon": "icon.png"
    }
}